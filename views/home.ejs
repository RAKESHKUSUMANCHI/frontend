<form class="" action="/" method="get">
  <button class="refresh btn btn-md" type="submit" name="button">Get another</button>
</form>


<div id="full-image">

  <div id="img-text">
    <p class="top-text"><%= topText %></p>
    <img src=<%=imgSrc%> alt="meme_template" />
      <p class="bottom-text"><%= bottomText %></p>
  </div>

</div>

<form class="text-input" action="/" method="post">

    <span class="input-group-text">Top-Text</span>
    <input type="text" class="form-control" name="topText" value="<%= topText %>" maxlength="30" placeholder="write here">
  </div>
  <div class="input-group input-group-sm mb-1">
    <span class="input-group-text">Bottom-Text</span>
    <input type="text" class="form-control" name="bottomText" value="<%= bottomText %>" maxlength="30" placeholder="write here">
  </div>
  <input type="hidden" name="imgSrc" value="<%= imgSrc %>"></input>
  <div class="input-group-sm mb-1">
    <button class=" insert input-group-text input-group-sm" type="submit" name="button">Insert</button>
  </div>

</form>

